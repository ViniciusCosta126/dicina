{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/post-card",
	"title": "Card de postagens",
	"description": "Card de postagens",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:index.jsx",
	"script": "file:index.jsx",
	"style": [
		"file:./style.scss",
		"style-post-card"
	],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"hasImage": {
			"type": "boolean",
			"default": true
		},
		"titleTag": {
			"type": "string",
			"default": "h2"
		},
		"widthCard": {
			"type": "string",
			"default": "medium"
		},
		"category": {
			"type": "object",
			"default": {
				"url": "/noticias",
				"label": "Notícias"
			}
		},
		"date": {
			"type": "string",
			"default": "01/01/2020"
		},
		"title": {
			"type": "string",
			"default": "Título do post"
		},
		"link": {
			"type": "string",
			"default": "#"
		},
		"cardImg": {
			"type": "object",
			"default": {
				"src": "https://via.placeholder.com/600x400",
				"alt": "Ayrton Senna",
				"width": "600",
				"height": "400"
			}
		},
		"bgColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#ffffff"
		}
	}
}