{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/modal",
	"title": "Modal",
	"description": "Estrutura simples para criação de modais",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"viewScript": "file:./view.js",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-modal"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"id": {
			"type": "string",
			"default": "default"
		},
		"forceLandsape": {
			"type": "boolean",
			"default": false
		},
		"videoID": {
			"type": "string",
			"default": ""
		},
		"youtubeVideo": {
			"type": "boolean",
			"default": false
		},
		"bgColor": {
			"type": "string",
			"default": "#002753"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		},
		"extraClass": {
			"type": "string",
			"default": ""
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#002753"
		}
	}
}
