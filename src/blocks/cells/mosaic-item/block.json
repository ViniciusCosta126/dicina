{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/mosaic-item",
	"title": "Item de Mosaico",
	"description": "Item para inserir no mosaico",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-mosaic-item"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"bgColor": {
			"type": "string",
			"default": "#002753"
		},
		"indexId": {
			"type": "integer",
			"default": 0
		},
		"modalId": {
			"type": "string",
			"default": "mosaic-modal-id"
		},
		"image": {
			"type": "object",
			"default": {
				"src": "https://placehold.co/475x445",
				"height": "445",
				"width": "475",
				"alt": "Imagem placeholder"
			}
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#002753"
		}
	}
}
