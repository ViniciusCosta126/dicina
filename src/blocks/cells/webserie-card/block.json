{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/webserie-card",
	"title": "Webserie Card",
	"description": "Componente de card para webserie",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-webserie-card"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"bgColor": {
			"type": "string",
			"default": "transparent"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		},
		"imgCard": {
			"type": "object",
			"default": {
				"src": "https://via.placeholder.com/350x288",
				"alt": "Imagem card"
			}
		},
		"episode": {
			"type": "string",
			"default": ""
		},
		"sinopse": {
			"type": "string",
			"default": ""
		},
		"diretor": {
			"type": "string",
			"default": ""
		},
		"linkEpisodio": {
			"type": "string",
			"default": ""
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "transparent"
		}
	}
}
