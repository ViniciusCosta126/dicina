{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/product",
	"title": "Product",
	"description": "Product block with category name and button",
	"category": "atoms",
	"version": "1.0.0",
	"editorScript": "file:index.jsx",
	"script": "file:index.jsx",
	"style": ["file:./style.scss", "style-product"],
	"render": "file:./render.php",
	"attributes": {
		"bgColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"variant": {
			"type": "string",
			"default": "products__carousel__card"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		},
		"image1": {
			"type": "object",
			"default": {
				"id": "",
				"src": ""
			}
		},
		"image2": {
			"type": "object",
			"default": {
				"id": "",
				"src": ""
			}
		},
		"category": {
			"type": "string",
			"default": "categoria"
		},
		"product": {
			"type": "string",
			"default": "nome do produto"
		},
		"link": {
			"type": "object",
			"default": {
				"url": "",
				"target": ""
			}
		}
	},
	"providesContext": {
		"il/product/category": "category"
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"bgColor": "#ffffff",
			"variant": "default"
		}
	}
}
