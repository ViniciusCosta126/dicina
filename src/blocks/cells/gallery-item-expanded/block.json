{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/gallery-item-expanded",
	"title": "Galeria - Item expandido",
	"description": "Componente para apresenta o de item expandido",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-gallery-item-expanded"],
	"render": "file:./render.php",
	"attributes": {
		"bgColor": {
			"type": "string",
			"default": "#002753"
		},
		"caption": {
			"type": "string",
			"default": "Legenda da imagem"
		},
		"hasCaption": {
			"type": "boolean",
			"default": true
		},
		"image": {
			"type": "object",
			"default": {
				"src": "https://placehold.co/1920x1080",
				"height": "1080",
				"width": "1920",
				"alt": "Imagem placeholder"
			}
		},
		"variant": {
			"type": "string",
			"default": "default"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#002753"
		}
	}
}
