{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/circuit-detail",
	"title": "Detalhes do circuito",
	"description": "Bloco para detalhamento de um circuito",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"viewScript": "file:./view.js",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-circuit-detail"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"bgColor": {
			"type": "string",
			"default": "transparent"
		},
		"position": {
			"type": "string",
			"default": "top-center"
		},
		"circuitImage": {
			"type": "object",
			"default": {
				"type": "image/jpeg",
				"src": "https://placehold.co/560x460",
				"alt": "Imagem placeholder",
				"width": "560",
				"height": "460"
			}
		},
		"itemsLength": {
			"type": "integer",
			"default": 1
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#002753",
			"circuitImage": {
				"type": "image/jpeg",
				"src": "https://placehold.co/560x460",
				"alt": "Imagem placeholder",
				"width": "560",
				"height": "460"
			}
		}
	}
}
