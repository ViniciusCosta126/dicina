{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/post-listing-header",
	"title": "Cabeçalho de seção",
	"description": "Cabeçalho para listagem de posts com título e subtitulo",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:index.jsx",
	"script": "file:index.jsx",
	"style": ["file:./style.scss", "style-post-listing-header"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"auxTitle": {
			"type": "string",
			"default": "Título auxiliar"
		},
		"bigAux": {
			"type": "boolean",
			"default": false
		},
		"middleSize": {
			"type": "boolean",
			"default": false
		},
		"title": {
			"type": "string",
			"default": "Título principal"
		},
		"titleColor": {
			"type": "string",
			"default": "linear-gradient(0deg, #00A851 0%, #00A851 10%,#1832D7 100%)"
		},
		"bgColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"marginM": {
			"type": "integer",
			"default": 24
		},
		"marginD": {
			"type": "integer",
			"default": 40
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#ffffff"
		}
	}
}
