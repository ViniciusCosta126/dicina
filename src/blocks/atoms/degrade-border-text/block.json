{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/degrade-border-text",
	"title": "Degrade Border Text",
	"description": "A text field with degrade border on the letters",
	"category": "atoms",	
	"version": "1.0.0",
	"editorScript": "file:index.jsx",
	"script": "file:index.jsx",
	"style": ["file:./style.scss", "style-degrade-border-text"],
	"render": "file:./render.php",
	"attributes": {
		"bgColor": {
			"type": "string",
			"default": "linear-gradient(90deg, #00A851 0%, #1832D7 100%)"
		},
		"variant": {
			"type": "string",
			"default": "default"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"bgColor": "#ffffff",
			"variant": "default"
		}
	}
}
