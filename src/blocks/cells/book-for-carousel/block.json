{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/book-for-carousel",
	"title": "Livro para carrossel",
	"description": "Item de slide para o carrossel de livros",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-book-for-carousel"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"bgColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"image": {
			"type": "object",
			"default": {
				"src": "https://placehold.co/250x356",
				"alt": "Imagem placeholder"
			}
		},
		"imageMobile": {
			"type": "object",
			"default": {
				"src": "https://placehold.co/200x286",
				"alt": "Imagem placeholder mobile"
			}
		},
		"bookLink": {
			"type": "string",
			"default": ""
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#ffffff"
		}
	}
}
