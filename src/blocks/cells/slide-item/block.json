{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/slide-item",
	"title": "Slide-Item",
	"description": "Item de slide para utiliza o no carrossel",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:index.jsx",
	"script": "file:index.jsx",
	"style": ["file:./style.scss", "style-slide-item"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "home-hero"
		},
		"bgColor": {
			"type": "string",
			"default": "#002753"
		},
		"isAnimated": {
			"type": "boolean",
			"default": false
		},
		"hasOverlay": {
			"type": "boolean",
			"default": false
		},
		"bgOverlay": {
			"type": "string",
			"default": "transparent"
		},
		"bgImage": {
			"type": "object",
			"default": {
				"src": "https://placehold.co/1920x1080",
				"alt": "Imagem placeholder"
			}
		},
		"bgImageMobile": {
			"type": "object",
			"default": {
				"src": "https://placehold.co/1024x768",
				"alt": "Imagem placeholder mobile"
			}
		},
		"hasText": {
			"type": "boolean",
			"default": true
		},
		"isVideo": {
			"type": "boolean",
			"default": false
		},
		"videoBg": {
			"type": "object",
			"default": {
				"id": "",
				"src": "",
				"alt": "",
				"width": "",
				"height": "",
				"type": "",
				"poster": ""
			}
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"bgColor": "#ffffff",
			"variant": "home-hero",
			"bgImageMobile": "https://placehold.co/768x1024"
		}
	}
}
