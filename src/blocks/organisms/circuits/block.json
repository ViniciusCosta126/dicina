{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/circuits",
	"title": "Circitos",
	"description": "Componente para apresentação de detalhes de um circuito",
	"category": "organisms",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-circuits"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"bgImageMobile": {
			"type": "object",
			"default": {
				"type": "image/jpeg",
				"src": "https://placehold.co/768x768",
				"alt": "Imagem placeholder"
			}
		},
		"bgImageDesk": {
			"type": "object",
			"default": {
				"type": "image/jpeg",
				"src": "https://placehold.co/720x890",
				"alt": "Imagem placeholder"
			}
		},
		"bgColor": {
			"type": "string",
			"default": "#002753"
		},
		"bgColorDegrade": {
			"type": "string",
			"default": "linear-gradient(0deg, rgba(0, 39, 83, 0) 0%, #002753 90%, #002753 100%)"
		},
		"bgColorDegradeDesk": {
			"type": "string",
			"default": "linear-gradient(to right, #002753 0, transparent 100%)"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#002753",
			"bgColorDegrade": "linear-gradient(0deg, rgba(0, 39, 83, 0) 0%, #002753 100%)"
		}
	}
}
