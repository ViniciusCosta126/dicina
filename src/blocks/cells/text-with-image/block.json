{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/text-with-image",
	"title": "Texto e imagem",
	"description": "Texto com imagem opcional",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:index.jsx",
	"script": "file:index.jsx",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.scss", "style-text-with-image"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "titles-texts"
		},
		"smallTitle": {
			"type": "boolean",
			"default": false
		},
		"hasImage": {
			"type": "boolean",
			"default": true
		},
		"bgImageMobile": {
			"type": "object",
			"default": {
				"type": "image/jpeg",
				"src": "https://placehold.co/768x768",
				"alt": "Imagem placeholder"
			}
		},
		"bgImageDesk": {
			"type": "object",
			"default": {
				"type": "image/jpeg",
				"src": "https://placehold.co/720x890",
				"alt": "Imagem placeholder"
			}
		},
		"modalID": {
			"type": "string",
			"default": "video-senna"
		},
		"videoID": {
			"type": "string",
			"default": ""
		},
		"hPosition": {
			"type": "string",
			"default": "left"
		},
		"vPosition": {
			"type": "string",
			"default": "bottom"
		},
		"bgColor": {
			"type": "string",
			"default": "#002753"
		},
		"bgColorDegrade": {
			"type": "string",
			"default": "linear-gradient(180deg, rgba(0, 39, 83, 0) 0%, #002753 90%, #002753 100%)"
		},
		"bgColorDegradeDesk": {
			"type": "string",
			"default": "linear-gradient(to right, #002753 0, transparent 100%)"
		},
		"isHero": {
			"type": "boolean",
			"default": true
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		},
		"indexId": {
			"type": "integer",
			"default": 1
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "only-text",
			"bgColor": "#002753",
			"bgColorDegrade": "linear-gradient(180deg, rgba(0, 39, 83, 0) 0%, #002753 100%)"
		}
	}
}
