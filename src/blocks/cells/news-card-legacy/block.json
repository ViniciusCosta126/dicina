{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "il/news-card-legacy",
	"title": "Novidades - Card",
	"description": "Componente para o card de noticias",
	"category": "cells",
	"version": "1.0.0",
	"editorScript": "file:./index.jsx",
	"script": "file:./index.jsx",
	"editorStyle": "file:./style-index.css",
	"style": ["file:./style-index.css", "style-news-card-legacy"],
	"render": "file:./render.php",
	"attributes": {
		"variant": {
			"type": "string",
			"default": "default"
		},
		"bgColor": {
			"type": "string",
			"default": "#ffffff"
		},
		"marginM": {
			"type": "integer",
			"default": 0
		},
		"marginD": {
			"type": "integer",
			"default": 0
		},
		"cardImgM": {
			"type": "object",
			"default": {
				"id": "",
				"src": "https://placehold.co/360x310",
				"alt": "icone"
			}
		},
		"cardImgD": {
			"type": "object",
			"default": {
				"id": "",
				"src": "https://placehold.co/554x700",
				"alt": "icone"
			}
		}
	},
	"example": {
		"attributes": {
			"preview": true,
			"blockOnly": true,
			"variant": "default",
			"bgColor": "#ffffff"
		}
	}
}
